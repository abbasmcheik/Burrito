<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/black"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Job Title -->
    <TextView
        android:id="@+id/textViewJobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Job Title"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Job Description -->
    <TextView
        android:id="@+id/textViewJobDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Short job description here..."
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <!-- Job Skills -->
    <TextView
        android:id="@+id/textViewJobSkills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Skills: "
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <!-- Job Category -->
    <TextView
        android:id="@+id/textViewJobCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Category: "
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <!-- Job Payout -->
    <TextView
        android:id="@+id/textViewJobPayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Payout: $"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <!-- Job Status -->
    <TextView
        android:id="@+id/textViewJobStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Job Status: Open"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <!-- Application Status -->
    <TextView
        android:id="@+id/textViewApplicationStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Status: Pending"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        android:textStyle="italic" />

    <!-- Applied At -->
    <TextView
        android:id="@+id/textViewAppliedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Applied On: 2025-01-18"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</LinearLayout>
