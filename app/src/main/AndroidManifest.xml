<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--    Internet permission-->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--    Read/Write permission for file manipulation-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LebRecruiter"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignUpActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".MyResumeActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".MyJobsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JobPostingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JobDetailsActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JobListingsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JobApplicationActivity"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>
